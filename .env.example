# ===========================================
# UZBEK TALIM - Environment Configuration
# ===========================================

# Application
APP_NAME=uzbek-talim
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# ===========================================
# DATABASE - PostgreSQL
# ===========================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/uzbek_talim
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/uzbek_talim

# Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# TELEGRAM BOT
# ===========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# Admin IDs (comma-separated)
TELEGRAM_ADMIN_IDS=123456789,987654321

# ===========================================
# FRONTEND
# ===========================================
VITE_API_URL=http://localhost:8000/api/v1
VITE_APP_NAME=Uzbek Talim

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# ===========================================
# SENTRY (Production)
# ===========================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ===========================================
# FILE STORAGE
# ===========================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# S3 (Optional)
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=
S3_REGION=

# ===========================================
# SMS Provider (Optional)
# ===========================================
SMS_PROVIDER=eskiz
SMS_API_KEY=
SMS_API_SECRET=

# ===========================================
# PAYMENT (Optional)
# ===========================================
PAYME_MERCHANT_ID=
PAYME_SECRET_KEY=
CLICK_MERCHANT_ID=
CLICK_SECRET_KEY=
